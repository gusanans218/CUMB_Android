<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="activity"
            type="com.example.cumb_android.MainActivity" />
    </data>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="332dp"
            android:layout_height="560dp"
            android:background="@drawable/background_dialog">

         <ImageView
             android:id="@+id/gamerole_dice"
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:background="@drawable/dice"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/gamerole_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취준생이라면 누구나"
                android:fontFamily="@font/paybooc_light"
                app:layout_constraintTop_toBottomOf="@+id/gamerole_dice"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/gamerole_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취업마블"
                android:fontFamily="@font/paybooc_bold"
                app:layout_constraintTop_toBottomOf="@+id/gamerole_text1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"
                android:textSize="25sp"/>

            <ImageView
                android:layout_width="280dp"
                android:layout_height="345dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/gamerole_gradient"
                app:layout_constraintTop_toBottomOf="@+id/gamerole_text2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>









</androidx.constraintlayout.widget.ConstraintLayout>
</layout>